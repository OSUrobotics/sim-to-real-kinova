<?xml version="1.0"?>
<launch>
  <arg name="use_hardware" default="false"/>
  <arg name="collect_data" default="false"/>
  <node pkg="rosbag" type="record" name="rosbag_record_sensors"
            args="record -o ~/physical_data/ /data_to_save /j2s7s300_driver/out/joint_state /usb_cam/image_raw" if="$(arg collect_data)"/>
            <!-- INCLUDE THIS IN THE PREVIOUS RECORDING THING TO SAVE CAMERA DATA /usb_cam/image_raw -->
  <rosparam command="load" file="$(find sim_to_real_kinova)/config/params.yaml"/>

  <!-- <include file="$(find kinova_bringup)/launch/kinova_robot.launch">
    <arg name="kinova_robotType" value="j2s7s300"/>
  </include>

  <include file="$(find j2s7s300_moveit_config)/launch/j2s7s300_demo.launch"/> -->
  <include file="$(find sim_to_real_kinova)/launch/cam_launch.launch"/>

<!--  <include file="$(find kinova_controller)/launch/sim_2_real_connector.launch"/>-->
  <include file="$(find kinova_controller)/launch/sim_2_real_connector_parash_aka_broken.launch"/>


  <include file="$(find kinova_object_detection)/launch/object_detection.launch"/>

  <param name="move_group/trajectory_execution/allowed_execution_duration_scaling" value="4.0" />
  <param name="move_group/trajectory_execution/execution_duration_monitoring" value="false" />

  <node pkg="sim_to_real_kinova" name="velocity_controller" type="velocity_controller.py" />
  <node pkg="sim_to_real_kinova" name="cartesian_controller" type="cartesian_controller.py" />

  <node pkg="sim_to_real_kinova" name="state_buffer_test" type="state_buffer_test.py" output="screen"/>

  <node
   name="serial_node"
   pkg="rosserial_python"
   type="serial_node.py"
   if="$(arg use_hardware)"
   >
   <param name="port" type="string" value="/dev/ttyACM0"/>   <param name="baud" type="int" value="57600"/></node>

</launch>
